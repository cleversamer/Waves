{
  "server": {
    "url": "https://samer-waves.herokuapp.com",
    "routes": {
      "getAllProducts": "/api/products",
      "getProduct": "/api/products",
      "getAllBrands": "/api/brands",
      "login": "/api/auth/signin",
      "register": "/api/auth/register",
      "isAuth": "/api/auth/isauth",
      "updateProfile": "/api/users/profile",
      "updateEmail": "/api/users/email",
      "addItemToCart": "/api/users/cart"
    }
  },
  "routes": {
    "home": "/home",
    "notFound": "/notFound",
    "shop": "/shop",
    "login": "/login",
    "register": "/register",
    "dashboard": "/dashboard",
    "cart": "/dashboard/user/cart",
    "userInfo": "/dashboard/user/info",
    "productDetails": "/product",
    "admin": {
      "products": "/dashboard/admin/products",
      "manageSite": "/dashboard/admin/manage"
    }
  },
  "localStorage": {
    "tokenKey": "x-access-token"
  },
  "query": {
    "products": {
      "bySold": {
        "skip": 0,
        "limit": 4,
        "sortBy": "itemSold",
        "order": -1
      },
      "byDate": {
        "skip": 0,
        "limit": 4,
        "sortBy": "date",
        "order": -1
      },
      "paginated": {
        "defaultLimit": 6
      }
    }
  },
  "paths": {
    "notAvailableImage": "/assets/images/image_not_available.png"
  },
  "errors": {
    "default": "Something went wrong.",
    "fetch": {
      "products": "Could not fetch products.",
      "brands": "Could not fetch brands."
    },
    "form": {
      "email": {
        "empty": "Email is required.",
        "invalid": "Invalid email address."
      },
      "password": {
        "empty": "Password is required.",
        "invalid": "Invalid password."
      }
    },
    "auth": {
      "tokenExpired": "Session expired, please login!",
      "itemAddedToCart": "Please login to add items to your cart."
    }
  },
  "messages": {
    "login": "Welcome to the Waves!",
    "logout": "Logged out successfully!",
    "profileUpdated": "Profile updated successfully!",
    "emailUpdated": "Email updated successfully!",
    "itemAddedToCart": "Item added to your cart!"
  }
}
